<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/azulin_300"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opciones del juego"
            android:textSize="25dp"
            android:layout_marginStart="60dp"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Escoge tus temas:"
            android:textSize="20dp"
            android:layout_marginStart="60dp"
            android:textColor="@color/purple_500"
            />

        <CheckBox android:id="@+id/checkbox1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entretenimiento"
            android:textSize="20dp"
            android:layout_marginStart="60dp"
            android:textColor="@color/white"
            />
        <CheckBox android:id="@+id/checkbox2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historia"
            android:textSize="20dp"
            android:layout_marginStart="60dp"
            android:textColor="@color/white"
            />

        <CheckBox android:id="@+id/checkbox3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Animales"
            android:textSize="20dp"
            android:layout_marginStart="60dp"
            android:textColor="@color/white"
            />
        <CheckBox android:id="@+id/checkbox4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cultura general"
            android:textSize="20dp"
            android:layout_marginStart="60dp"
            android:textColor="@color/white"
            />
        <CheckBox android:id="@+id/checkbox5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TODOS"
            android:textSize="20dp"
            android:layout_marginStart="60dp"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escoge tus cantidad de preguntas:"
            android:textSize="20dp"
            android:textColor="@color/purple_500"
            />

        <TextView
            android:id="@+id/txtSeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="140dp"
            android:textColor="@color/white"
            />

        <SeekBar
            android:id="@+id/ExSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:min="5"
            android:max="10"
            android:progress="5"
            android:layout_marginTop="20dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            />

<!--        <Button-->
<!--            android:id="@+id/btnVer"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginStart="100dp"-->
<!--            android:layout_marginEnd="100dp"-->
<!--            android:layout_marginTop="30dp"-->
<!--            android:text="Checar"-->
<!--            android:backgroundTint="@color/rojito"-->
<!--            />-->

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginTop="20dp"
            android:text="Regresar"
            android:backgroundTint="@color/rojito"
            />




    </LinearLayout>

</LinearLayout>